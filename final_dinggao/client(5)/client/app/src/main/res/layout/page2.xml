<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.DayNight"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewP2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/flag"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewP2"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="球队成员"
        android:textColor="#494949"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewP2"
        app:layout_constraintStart_toEndOf="@+id/imageViewP2" />

    <ImageView
        android:id="@+id/imageViewP2_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/add1"
        android:onClick="mybuttonlistener"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewP2"
        app:layout_constraintStart_toEndOf="@+id/textViewP2" />

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/text_field_boxesP2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="4dp"
        app:hint="请添加球员"
        app:layout_constraintStart_toStartOf="@+id/textViewP2"
        app:layout_constraintTop_toBottomOf="@+id/textViewP2"
        app:primaryColor="@color/gray" />
    <ImageView
        android:id="@+id/imageViewP2_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/coach"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewP2"
        app:layout_constraintStart_toStartOf="@+id/imageViewP2" />

    <TextView
        android:id="@+id/textViewP2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="指导教练"
        android:textColor="#494949"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewP2_2"
        app:layout_constraintStart_toEndOf="@+id/imageViewP2_2" />

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/text_field_boxesP2_1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginTop="4dp"
        app:hint="请输入指导教练"
        app:maxCharacters="20"
        app:singleLine="true"
        app:layout_constraintStart_toStartOf="@+id/textViewP2_1"
        app:layout_constraintTop_toBottomOf="@+id/textViewP2_1"
        app:primaryColor="@color/gray" />
    <View
        android:layout_width="10dp"
        android:layout_height="290dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageViewP2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/dash_vertical_line"
        android:contentDescription="@string/app_name"
        android:layerType="software" />
</androidx.constraintlayout.widget.ConstraintLayout>