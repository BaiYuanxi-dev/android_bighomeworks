<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="20dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/textViewAddMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:text="创建球队成员"
        android:textColor="#494949"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewAddMember_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="姓名："
        android:textColor="#494949"
        android:textSize="18sp" />

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
        android:id="@+id/text_field_boxes"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        app:panelBackgroundColor="@color/white"
        app:hint="请输入球员姓名"
        app:maxCharacters="10"
        app:primaryColor="@color/gray"
        app:singleLine="true" />

    <TextView
        android:id="@+id/textViewAddMember_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="所属球队："
        android:textColor="#494949"
        android:textSize="18sp" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner0"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewAddMember_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="球员号码："
        android:textColor="#494949"
        android:textSize="18sp" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/textViewAddMember_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="球员位置："
        android:textColor="#494949"
        android:textSize="18sp" />

    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="提交"
        android:backgroundTint="@color/darkgray"
        android:textColor="@color/gray"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>





