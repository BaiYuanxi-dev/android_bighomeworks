<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents.DayNight"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewP3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/branch"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textViewP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="选择比赛模式"
        android:textColor="#494949"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewP3"
        app:layout_constraintStart_toEndOf="@+id/imageViewP3"
        />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textViewP3"
        app:layout_constraintTop_toBottomOf="@+id/textViewP3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorGrey"/>
    <ImageView
        android:id="@+id/imageViewP3_1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/time"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textViewP3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="选择比赛时长"
        android:textColor="#494949"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewP3_1"
        app:layout_constraintStart_toEndOf="@+id/imageViewP3_1"
        />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/nice_spinner1"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textViewP3_1"
        app:layout_constraintTop_toBottomOf="@+id/textViewP3_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/colorGrey"/>
    <View
        android:layout_width="10dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageViewP3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/dash_vertical_line"
        android:contentDescription="@string/app_name"
        android:layerType="software" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkgray"
        android:text="生成赛程"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginLeft="150dp"
        android:layout_marginBottom="55dp"
        android:onClick="mybuttonlistener"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>